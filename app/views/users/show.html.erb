<p id="notice"><%= notice %></p>

<p>
  <strong>
  <%= @user.username %>
  </strong>
</p>

<p>
  Has made <%=pluralize(@user.ratings.count, 'rating')%>
</p>

<p>
  Favorite beer: <%=@user.favorite_beer%>, <br>
  Favorite beerstyle: <%=@user.favorite_style%>, <br>
  Favorite brewery: <%=@user.favorite_brewery%>
</p>

<% if @user.ratings.any? %>
    <p> Average rating: <%= @user.rating_average %></p>

    <h3>ratings</h3>

    <ul>
      <% @user.ratings.each do |r| %>
          <li>
            <%= r %>
            <% if @user == current_user %>
                <%= link_to 'delete', r, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </li>
      <% end %>
    </ul>

<% end %>



<% if @user == current_user %>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>
<%= link_to 'Back', users_path %>
